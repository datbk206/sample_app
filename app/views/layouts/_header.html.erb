<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app.title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("app.language"), locale: t("app.locale") %></li>
        <li><%= link_to t("home.title"), root_path %></li>
        <li><%= link_to t("help.title"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("session.login.user"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "session.login.account" %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("session.login.profile"), current_user %></li>
              <li><%= link_to t("session.login.setting"), '#' %></li>
              <li class="divider"></li>
              <li> <%= link_to t("session.logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("session.login.title"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
